@model GovernadorStore.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editando Fornecedor ";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="mb-3 col-md-6">
            <label asp-for="RazaoSocial" class="control-label"></label>
            <input asp-for="RazaoSocial" class="form-control" />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>

            <label asp-for="Documento" class="control-label"></label>
            <input asp-for="Documento" class="form-control" />
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="mb-3 col-md-6">

            <label asp-for="TipoFornecedor"></label>
            <div>
                <input type="radio" value="1" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 1)" /> Pessoa Física
                <input type="radio" value="2" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 2)" /> Pessoa Jurídica
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Editar" class="btn btn-outline-warning" />
        <a class="btn btn-outline-dark" href="javascript:window.history.back();">Voltar</a>
    </div>
</form>

<div>
    <partial name="_DetalhesEndereco" />
</div>

<hr />
<h4>Produtos</h4>
<div>
    <partial name="../Produtos/_ListaProdutos" model="@Model.Produtos" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
